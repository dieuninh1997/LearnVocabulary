<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/bg_login</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>

    <style name="AppTheme.Noactionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#f5f5f5</item>
        <item name="colorControlActivated">@color/colorAccent</item>


    </style>

    <color name="divider_home">#ededed</color>
    <style name="DividerH">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_home</item>
    </style>

    <style name="textStyleCardMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/img_rate</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black_de</item>
        <item name="android:textSize">@dimen/text_size_card_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardMainStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:foreground">?selectableItemBackground</item>

        <item name="android:layout_marginRight">@dimen/size_margin_card_main</item>
    </style>
    <style name="cardMainStyleRight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:foreground">?selectableItemBackground</item>

    </style>

</resources>
